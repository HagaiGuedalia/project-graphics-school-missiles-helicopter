	public void mullMat(Matrix3DForStu mati){
		missilebody.mullMat(mati);
		missilestick1.mullMat(mati);
		missilestick2.mullMat(mati);
		missilestick3.mullMat(mati);
		missilestick4.mullMat(mati);

		
	}






}