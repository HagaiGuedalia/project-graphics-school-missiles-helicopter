			myPanel.move(myPanel.phC.x-myPanel.phF.x, myPanel.phC.y-myPanel.phF.y, myPanel.phC.z-myPanel.phF.z);
			
			myPanel.moveMissile(myPanel.pwx*missileSpeed, myPanel.pwy*missileSpeed, myPanel.pwz*missileSpeed);
